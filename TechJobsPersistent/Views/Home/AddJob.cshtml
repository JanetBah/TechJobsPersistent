@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name"class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.EmployerId" name="JobId" />
        <label asp-for="EmployerId">Employer Id</label>
        <select asp-for="EmployerId" asp-items="@Model.Employers"></select>
        <span asp-validation-for="EmployerId"></span>
        

        <a asp-controller="Employer" asp-action="Add" asp-route-id="@Model.EmployerId">Add additional Employers</a>

    </div>
    <div class="form-group">
        @foreach (var skill in @Model.Jobskill)
        {
            <label>@skill.Name</label>
            <input type="checkbox" name="selectedSkills" value="@skill.Id" />
            
        }

        <a asp-controller="Skill" asp-action="Add">Add additional Skill</a>
    </div>

    <input type="submit" value="Add Job" />
</form>

